[bar/main]
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

bottom = true

width = 100%
height = 30

background = #000
foreground = #fff

modules-right = cpu wireless-network battery alsa date
modules-left = i3 spacer spotify-logo previous playpause next spotify 

; module-margin = 1
; separator = "|"

font-0 = hack nerd font:size=10;2

tray-position = right
tray-detached = false
tray-maxsize = 20
tray-background = #000
tray-padding = 4
tray-scale = 1.0

