[module/battery]
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

time-format = %H:%M

label-charging = "(%percentage%% %time%)"
label-discharging = "(%percentage%% %time%)"
label-full = "Fully charged"

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

format-charging-background = #030
format-discharging-background = #330

format-charging-padding = 1
format-discharging-padding = 1

ramp-capacity-0 = "  !"
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "

animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "
animation-charging-framerate = 500


[module/date]
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

type = internal/date

; Seconds to sleep between updates
; Default: 1.0
interval = 1.0

label = "%date% %time%"

; See "https://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = %a %Y-%m-%d%

; Optional time format
time = %H:%M:%S

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S

format-background = #333333
format-foreground = #ffffff
format-padding = 1

[module/wireless-network]
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

type = internal/network
interface = wlan0

interval = 3.0

accumulate-stats = true

label-connected = %essid%
label-disconnected = Disconnected
format-connected =   <label-connected>  <ramp-signal>
format-disconnected = <label-disconnected>

format-connected-background = #030
format-disconnected-background = #300

format-connected-padding = 1
format-disconnected-padding = 1

ramp-signal-0 = "%{F#333}▁▂▄▆█%{F-}"
ramp-signal-1 = "▁%{F#333}▂▄▆█%{F-}"
ramp-signal-2 = "▁▂%{F#333}▄▆█%{F-}"
ramp-signal-3 = "▁▂▄%{F#333}▆█%{F-}"
ramp-signal-4 = "▁▂▄▆%{F#333}█%{F-}"
ramp-signal-5 = "▁▂▄▆█"

